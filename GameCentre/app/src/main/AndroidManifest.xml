<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc207.slidingtiles">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!--
        Activities, each has orientation locked to portrait. SplashScreenActivity is the launcher
        activity.
        -->

        <activity
            android:name="fall2018.csc207.menu.SplashScreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="fall2018.csc207.menu.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="fall2018.csc207.menu.GameMenuActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="fall2018.csc207.menu.scoreboard.ScoreboardActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="fall2018.csc207.menu.NewGameActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="fall2018.csc207.game.GameMainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="fall2018.csc207.menu.GameCentreActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>